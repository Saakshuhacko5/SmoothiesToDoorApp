<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FinalorderViewPagerfragment">

    <androidx.cardview.widget.CardView
        android:layout_width="373dp"
        android:layout_height="632dp"
        app:cardCornerRadius="50dp"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/orderfruits"
            android:layout_width="372dp"
            android:layout_height="298dp"
            app:srcCompat="@drawable/redfruits" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="274dp"
            android:layout_height="47dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="NUMBER OF SERVINGS"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/noofservings"
            android:layout_width="117dp"
            android:layout_height="47dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="330dp"
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/textView8" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="213dp"
            android:layout_height="53dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="410dp"
            android:gravity="center"
            android:text="ESTIMATED ARRIVAL"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="213dp"
            android:layout_height="53dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="445dp"
            android:gravity="center"
            android:text="TOMORROW"
            android:textSize="24sp"
            android:textStyle="bold" />

        <View
            android:layout_width="334dp"
            android:layout_height="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="520dp"
            android:background="#393738" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="111dp"
            android:layout_height="47dp"
            android:layout_marginTop="540dp"
            android:gravity="center"
            android:text="PRICE:"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/finalprice"
            android:layout_width="113dp"
            android:layout_height="47dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="540dp"
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="103dp"
            android:layout_height="56dp"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="540dp"
            android:gravity="center"
            android:text="SHIPPED"
            android:textSize="24sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>